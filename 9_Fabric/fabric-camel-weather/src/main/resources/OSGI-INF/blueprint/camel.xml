<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
           http://www.osgi.org/xmlns/blueprint/v1.0.0
           http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <camelContext xmlns="http://camel.apache.org/schema/blueprint">
        <route id="weather-info">
            <from uri="timer://weather?period=10000"/>
            <log message="Collecting Weather info for 7d"/>
            <setBody>
                <constant>Paris,Brussels,New-York,Roma,Boston,Phoenix,Florennes</constant>
            </setBody>
            <split>
                <tokenize token=","/>
                <setHeader headerName="CamelWeatherLocation">
                    <simple>${body}</simple>
                </setHeader>
                <to uri="weather:foo?period=1d"/>
                <log message="Result for ${header.CamelWeatherLocation}"/>
                <setBody>
                    <groovy>groovy.json.JsonOutput.prettyPrint(request.body)</groovy>
                </setBody>
                <log message="${body}"/>
            </split>
        </route>
    </camelContext>
</blueprint>